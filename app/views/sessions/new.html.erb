<div class='container'>
  <div class='row'>
    <div class='login_registration col-md-6'>
      <h2>Register</h2>
      <% if flash[:registration_errors] %>
        <% flash[:registration_errors].each do |e| %>
          <p><%= e %></p>
        <% end %>
      <% end %>
      <form action="/users" method="POST">
        <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>' >
        <div class='form-group'>
          <label for='first_name'>First Name:
            <input class='form-control' type='text' name='users[first_name]' id='first_name'>
          </label>
        </div><!-- form group -->

        <div class='form-group'>
          <label for='last_name'>Last Name:
            <input class='form-control' type='text' name='users[last_name]' id='last_name'>
          </label>
        </div><!-- form group -->

        <div class='form-group'>
          <label for='email'>Email:
            <input class='form-control' type='text' name='users[email]' id='email'>
          </label>
        </div><!-- form group -->

        <div class='form-group'>
          <label for='password'>Password:
            <input class='form-control' type='password' name='users[password]' id='password'>
          </label>
        </div><!-- form group -->

        <div class='form-group'>
          <label for='password_confirmation'>Password confirmation:
            <input class='form-control' type='password' name='users[password_confirmation]' id='password_confirmation'>
          </label>
        </div><!-- form group -->

        <input class='btn btn-danger' type='submit' value='Register'>
      </form>
    </div><!-- registration -->

    <div class='login_registration col-md-6'>
      <h2>Login</h2>
      <% if flash[:login_errors] %>
        <% flash[:login_errors].each do |k| %>
          <p><%= k %></p>
        <% end %>
      <% end %>
      <form action="/sessions" method="POST">
        <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>' >

        <div class='form-group'>
          <label for='login_email'>Email:
            <input class='form-control' type='text' name="sessions[email]" id='login_email'>
          </label>
        </div><!-- form group -->

        <div class='form-group'>
          <label for='login_password'>Password:
            <input class='form-control' type='password' name="sessions[password]" id='login_password'>
          </label>
        </div><!-- form group -->

        <input class='btn btn-success' type='submit' value='Login'>
      </form>
    </div><!-- login -->
  </div><!-- row -->
</div><!-- container -->
